        <Setter Property="TextBlock.Foreground" Value="#000000"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="TextBlock.Foreground" Value="#000000"/>
            </Trigger>
        </Style.Triggers>
    </Style> -->

</ResourceDictionary>